/* pages/charts/charts.wxss */
.charts{
  margin:0;
  background-color: whitesmoke;
  padding: 10rpx 0;
}
.card{
  width: 80%;
  height: 230rpx;
  background-color: white;
  border-radius: 50rpx;
  margin:30rpx auto;
  padding: 5%;
}
.card .cardTop{
  width: 100%;
  height: 50rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.cardtopR{
  position: absolute;
  top: 10rpx;
  font-size: 20rpx;
  left: 500rpx;
}
.cardtopL{
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  top: -10rpx;
  left: 10rpx;
}
.card .left{
  float: left;
  width: 30%;
  /* background-color: violet; */
  
}
.card image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;

}
.card .right{
  margin-bottom: 10rpx;
  float: left;
  width: 60%;
  margin-left: 10%;
  font-size: 30rpx;
}
.text{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 500;
}